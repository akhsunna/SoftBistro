- provide(:title, 'Profile')
.cont
  .umain
    .ava
      = image_tag @u.avatar_url(:thumb).to_s

    .inf
      %h1
        = @u.name
      %h3
        = @u.place
      %br
      = link_to 'Account Settings', edit_user_registration_path

  .umain
    Other users:
    %ul
      - @users.each do |user|
        %li
          = link_to user.name, user
