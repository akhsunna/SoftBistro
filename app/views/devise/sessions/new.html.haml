.container.signin
  = form_for resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-signin'} do |f|

    %h3{ :class => 'form-signin-heading' }Please sign in

    = f.email_field :email, autofocus: true, placehplder: :email, :class => 'form-control'

    = f.password_field :password, autocomplete: 'off', placehplder: :password, :class => 'form-control'

    -#- if devise_mapping.rememberable?
    -#  = f.check_box :remember_me
    -#  = f.label :remember_me
    %p

    = f.submit 'Sign in', class: 'btn btn-lg btn-primary btn-block'

  %center= render 'devise/shared/links'
